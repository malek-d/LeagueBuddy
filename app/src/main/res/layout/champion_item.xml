<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1sp"
    android:layout_marginTop="1sp"
    android:layout_marginLeft="10sp"
    android:layout_marginRight="10sp"
    android:background="@color/slightlyTransparent">
    <ProgressBar
        android:id="@+id/itemProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="4sp"
        app:cardMaxElevation="2sp"
        app:cardElevation="1sp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="@color/slightlyTransparent"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/championName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:layout_centerHorizontal="true"
                android:gravity="center"/>

            <ImageView
                android:contentDescription="@string/championIconDescription"
                android:id="@+id/championIcon"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_below="@id/championName"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/championLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/whiteText"
                android:layout_below="@id/championIcon"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/championPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/championLevel"
                android:textSize="10sp"
                android:layout_marginBottom="10sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
