<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bordered_item_background"
    android:layout_marginBottom="5dp"
    android:layout_height="100sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/summonerIcon"
            android:layout_width="85dp"
            android:layout_height="85dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/summonerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Counterlogic"
                android:textColor="@color/whiteText"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/summonerLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:text="Level: 30"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_select_item_white"/>
</RelativeLayout>